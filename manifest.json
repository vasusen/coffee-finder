{
    "manifest_version": 2,
    "name":    "Coffee Finder",
    "version": "0.1",

    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js":      ["content.js"]
    }],
    "browser_action": {
        "default_title": "Click here to find coffee!",
        "default_icon": "coffee.png"
    }
}